{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "users": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "sendNewsletter": {
            "type": "boolean"
          }
        },
        "required": [
          "id",
          "username",
          "password",
          "email",
          "sendNewsletter"
        ]
      }
    }
  }
}